@using MyProject.Domain
@model PerformanceReview

@{
    ViewData["Title"] = "View";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Employee Review Details</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Employee Name</dt>
                <dd class="col-sm-8">@Model.Employee.Name</dd>

                <dt class="col-sm-4">Review Date</dt>
                <dd class="col-sm-8">@Model.ReviewDate.ToString("dd-MMM-yyyy")</dd>

                <dt class="col-sm-4">Review Score</dt>
                <dd class="col-sm-8">@Model.ReviewScore</dd>

                <dt class="col-sm-4">Review Notes</dt>
                <dd class="col-sm-8">@Model.ReviewNotes</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a class="btn btn-primary me-2" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
            <a class="btn btn-secondary" asp-action="List">Back to List</a>
        </div>
    </div>
</div>
